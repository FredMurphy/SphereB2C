
@{
    ViewData["Title"] = "Index";
}

<h1>Claims for @User.Identity.Name</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Claim</th>
            <th scope="col">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Security.Claims.Claim c in User.Claims)
        {
            <tr scope="row">
                <td>@c.Type</td>
                <td>@c.Value</td>
            </tr>
        }
    </tbody>
</table>